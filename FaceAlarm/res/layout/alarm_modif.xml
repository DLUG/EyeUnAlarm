<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="알람 등록" 
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF000000"
        android:background="#FFFFFFFF"
        android:gravity="center"
        
        />
    <LinearLayout 
        android:id="@+id/layout_time"
        android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:orientation="horizontal" >
        <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="TextView"
        android:padding="20dp" />

        <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
        
        <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:gravity="right"
        android:padding="20dp"
        android:text="time" />
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_snooze"
        android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:orientation="horizontal" >
        <TextView
        android:id="@+id/snoozeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="20dp" />
        
        <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
        
        <TextView
        android:id="@+id/snoozeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="snooze"
        android:padding="20dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_type" 
        android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:orientation="horizontal" >
        <TextView
        android:id="@+id/typeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="20dp" />
        
        <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
        
        <ImageView
        android:id="@+id/typeToggle_s"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
         />

		<ImageView
        android:id="@+id/typeToggle_v"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
         />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sound"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/soundTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="TextView" />

        <SeekBar
            android:id="@+id/soundBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/layout_repeat"
        android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:orientation="horizontal" >
        <TextView
        android:id="@+id/repeatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:padding="20dp"/>
        
        <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
        
        <ImageView
        android:id="@+id/repeatToggle"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:src ="@drawable/off"
         />
        
        
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:orientation="horizontal"
    	android:gravity="center"
    	 >

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Button" />

        
        <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:padding="20dp"/>
        
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Button" />
        
    </LinearLayout>
	
</LinearLayout>